@model double

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>
<div>
    <form action="SaySquare" method="post">
        <p>
            Enter the number to square: <input name="inputNumber" type="number" step="any" />
        </p>
        <input name="submit" type="submit"/>
    </form>
    <p>
        The square root of the input is: @Model
    </p>
</div>
